set shell sh
set shellopts '-eu'
#set waitmsg "\n"

set icons
set previewer ~/.config/lf/preview.sh
set cleaner ~/.config/lf/clean.sh
set dirfirst

# Hide / unhide hidden files
map h set hidden!

# Reload config file, Open Shell, Open Editor
map R :reload; recol; source ~/.config/lf/lfrc
map S $$SHELL
map E ${{eval "NVIM_APPNAME=astronvim nvim '$f'"}}

# Delete, mkdir, rename
map D ${{eval "rm -rf '$f'"}}
map m mkdir
map r :rename

# Change file atributes
map +x chmod +x
map +w chmod +w
map +r chmod +r
map -x chmod -x
map -w chmod -w
map -r chmod -r

# Compress/uncompress
map xz zip
map xt tar
map xx extract
map xd extract_to_dir




cmd chmod ${{
        [ $# -ne 1 ] && exit
        eval "chmod u$1 '$f'"
        lf -remote "send $id reload"
}}

cmd mkdir %{{
    printf "Nome do diret√≥rio: "
    read ans
    mkdir $ans
}}



# extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

cmd extract_to_dir ${{
    set -f
    # extract to the directory of the current file removing the extension
    dir=${f%.*}
    mkdir -p $dir
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f -C $dir;;
        *.tar.gz|*.tgz) tar xzvf $f -C $dir;;
        *.tar.xz|*.txz) tar xJvf $f -C $dir;;
        *.zip) unzip $f -d $dir;;
        *.rar) unrar x $f $dir;;
        *.7z) 7z x $f -o$dir;;
    esac
    lf -remote "send $id reload"
    lf -remote "send $id select \"$dir\""
}}

# compress current file or selected files with tar and gunzip
cmd tar ${{
    dir=${f%/*}
    dir=${dir##*/}
    set -f
    tar czf "${dir}.tar.gz" $fx
}}

# compress current file or selected files with zip
cmd zip ${{
    dir=${f%/*}
    dir=${dir##*/}
    set -f
    zip -r "${dir}.zip" $fx
}}


